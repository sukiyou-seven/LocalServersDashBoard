<Page
  x:Class="LocalServersDashBoard.Views.Pages.DashboardPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:LocalServersDashBoard.Views.Pages"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
  Title="DashboardPage"
  d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
  d:DesignHeight="450"
  d:DesignWidth="800"
  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
  mc:Ignorable="d"
>
  <StackPanel>
      <StackPanel>
          <ui:TextBlock Text="系统版本"></ui:TextBlock>
          <ui:TextBlock Text="{Binding ViewModel.OsVersion}"
                        Margin="0,0,0,10"></ui:TextBlock>
      </StackPanel>
      
      <StackPanel>
          <ui:TextBlock Text="系统平台"></ui:TextBlock>
          <ui:TextBlock Text="{Binding ViewModel.OsPlatform}"
                        Margin="0,0,0,10"></ui:TextBlock>
      </StackPanel>
       
      <StackPanel>
          <ui:TextBlock Text="系统架构"></ui:TextBlock>
          <ui:TextBlock Text="{Binding ViewModel.SystemArchitecture}"
                        Margin="0,0,0,10"></ui:TextBlock>
      </StackPanel>
      
      <StackPanel>
          <ui:TextBlock Text="设备名称"></ui:TextBlock>
          <ui:TextBlock Text="{Binding ViewModel.MachineName}"
                        Margin="0,0,0,10"></ui:TextBlock>
      </StackPanel>
      
      <StackPanel>
          <ui:TextBlock Text="用户名"></ui:TextBlock>
          <ui:TextBlock Text="{Binding ViewModel.UserName}"
                        Margin="0,0,0,10"></ui:TextBlock>
      </StackPanel>
      
      <StackPanel>
          <ui:TextBlock Text="系统目录"></ui:TextBlock>
          <ui:TextBlock Text="{Binding ViewModel.SystemDirectory}"
                        Margin="0,0,0,10"></ui:TextBlock>
      </StackPanel>
      
      <StackPanel>
          <ui:TextBlock Text="内核 数量"></ui:TextBlock>
          <ui:TextBlock Text="{Binding ViewModel.ProcessorCount}"
                        Margin="0,0,0,10"></ui:TextBlock>
      </StackPanel>
      
      <StackPanel>
          <ui:TextBlock Text="内存 MB"></ui:TextBlock>
          <ui:TextBlock Text="{Binding ViewModel.MemorySize}"
                        Margin="0,0,0,10"></ui:TextBlock>
      </StackPanel>
      
      <StackPanel>
          <ui:TextBlock Text="NodeJsVersion"></ui:TextBlock>
          <ui:TextBlock Text="{Binding ViewModel.NodeJsVersion}"
                        Margin="0,0,0,10"></ui:TextBlock>
      </StackPanel>
  </StackPanel>
</Page>
